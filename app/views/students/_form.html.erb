<%= render 'shared/errors', obj: @student %>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header"><%= @student.new_record? ? "Sign Up" : "Edit Profile" %></h3>
        <div class="row">
          <%= form_for(@student, html: { class: "col s12" }) do |t| %>
          <div class="row">
            <div class="input-field col s12">
              <%= t.text_field :name, placeholder: 'Enter your full name',
              autocofus: true %>
              <%= t.label :name %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= t.email_field :email, placeholder: 'Enter your email address' %>
              <%= t.label :email %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= t.password_field :password, placeholder: 'Choose a password' %>
              <%= t.label :password %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= t.password_field :password_confirmation, placeholder: 'Confirm your password' %>
              <%= t.label :password_confirmation %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= t.button(@student.new_record? ? "Sign Up" : "Submit changes", class: "waves-effect waves-light btn orange right") %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
