<% if @student.errors.any? %>
<div class="container">
  <div class="row sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel red lighten-2">
        <span class="white-text">
          <strong><%= pluralize(@student.errors.count, "error") %></strong>
          prohibited your profile from being created.
            <ul>
              <% @student.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          <% end %>
        </span>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="header">Sign Up</h3>
        <div class="row">
          <%= form_for(@student, html: { class: "col s12" }) do |t| %>
          <div class="row">
            <div class="input-field col s12">
              <%= t.text_field :name, placeholder: 'Enter your full name',
              autocofus: true %>
              <%= t.label :name %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= t.email_field :email, placeholder: 'Enter your email address' %>
              <%= t.label :email %>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= t.submit "Submit", class: "waves-effect waves-light btn orange right" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
